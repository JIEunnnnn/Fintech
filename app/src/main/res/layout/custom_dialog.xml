<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".02"
        app:layout_constraintGuide_begin="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".98"
        app:layout_constraintGuide_begin="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".30"
        app:layout_constraintGuide_begin="100dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50"
        app:layout_constraintGuide_begin="100dp" />



    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline01"
        app:layout_constraintGuide_percent=".00"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline02"
        app:layout_constraintGuide_percent=".10"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline03"
        app:layout_constraintGuide_percent=".20"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline04"
        app:layout_constraintGuide_percent=".30"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline05"
        app:layout_constraintGuide_percent=".40"
        android:orientation="horizontal"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline06"
        app:layout_constraintGuide_percent=".50"
        android:orientation="horizontal"/>


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top_guideline07"
        app:layout_constraintGuide_percent="1.00"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:text="이용권 보내기"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@+id/guideline01"
        app:layout_constraintRight_toLeftOf="@id/guideline02"
        app:layout_constraintTop_toBottomOf="@+id/top_guideline01"
        app:layout_constraintBottom_toTopOf="@+id/top_guideline02"
        />



        <TextView
            android:id="@+id/toid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="보낼사람ID"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline01"
            app:layout_constraintRight_toLeftOf="@id/guideline03"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline02"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline03"
            />


        <EditText
            android:id="@+id/edittoid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:hint="내용을 입력하세요."
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline03"
            app:layout_constraintRight_toLeftOf="@id/guideline02"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline02"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline03"
            />



        <TextView
            android:id="@+id/limit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="한도금액설정"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline01"
            app:layout_constraintRight_toLeftOf="@id/guideline03"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline03"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline04"
            />


        <EditText
            android:id="@+id/editlimit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:hint="한도금액을 입력하세요."
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline03"
            app:layout_constraintRight_toLeftOf="@id/guideline02"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline03"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline04"
            />

        <TextView
            android:id="@+id/frompw"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="내 비밀번호"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline01"
            app:layout_constraintRight_toLeftOf="@id/guideline03"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline04"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline05"
            />


        <EditText
            android:id="@+id/editfrompw"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:hint="내용을 입력하세요."
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintLeft_toRightOf="@+id/guideline03"
            app:layout_constraintRight_toLeftOf="@id/guideline02"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline04"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline05"
            />


        <Button
            android:id="@+id/okButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="확인"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="#ffffff"
            app:layout_constraintLeft_toRightOf="@+id/guideline01"
            app:layout_constraintRight_toLeftOf="@id/guideline04"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline05"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline06"
            />



        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="16dp"
            android:background="#ffffff"
            app:layout_constraintLeft_toRightOf="@+id/guideline04"
            app:layout_constraintRight_toLeftOf="@id/guideline02"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline05"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline06"
            />




</androidx.constraintlayout.widget.ConstraintLayout>