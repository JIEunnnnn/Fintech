<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pass_background"
    android:padding="8dp"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".02"
            app:layout_constraintGuide_begin="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".98"
            app:layout_constraintGuide_begin="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".20"
            app:layout_constraintGuide_begin="100dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".65"
            app:layout_constraintGuide_begin="100dp" />



        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline01"
            app:layout_constraintGuide_percent=".00"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline02"
            app:layout_constraintGuide_percent=".30"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline03"
            app:layout_constraintGuide_percent=".40"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline04"
            app:layout_constraintGuide_percent=".50"
            android:orientation="horizontal"/>

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline05"
            app:layout_constraintGuide_percent=".80"
            android:orientation="horizontal"/>


        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_guideline06"
            app:layout_constraintGuide_percent="1.00"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/from_idInpass"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:text="from_id"
            app:layout_constraintLeft_toRightOf="@+id/guideline03"
            app:layout_constraintRight_toLeftOf="@id/guideline04"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline01"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline02"
            ></TextView>

        <TextView
            android:id="@+id/timeInpass"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:text="2019-12-01"
            app:layout_constraintLeft_toRightOf="@+id/guideline03"
            app:layout_constraintRight_toLeftOf="@id/guideline04"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline04"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline05"
            ></TextView>

        <Button
            android:id="@+id/buttonQR"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:text="QR코드"
            app:layout_constraintLeft_toRightOf="@+id/guideline04"
            app:layout_constraintRight_toLeftOf="@id/guideline02"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline01"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline05"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:text="한도금액"
            android:textAlignment="center"
            android:background="@drawable/button_layout"
            app:layout_constraintLeft_toRightOf="@+id/guideline01"
            app:layout_constraintRight_toLeftOf="@id/guideline03"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline04"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline05"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:text="From "
            android:textAlignment="center"
            android:background="@drawable/button_layout"
            app:layout_constraintLeft_toRightOf="@+id/guideline01"
            app:layout_constraintRight_toLeftOf="@id/guideline03"
            app:layout_constraintTop_toBottomOf="@+id/top_guideline01"
            app:layout_constraintBottom_toTopOf="@+id/top_guideline02"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
